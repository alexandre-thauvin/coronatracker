<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDeaths"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llData"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/baloo_regular"
            android:id="@+id/tvNumberDeaths"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/whiteNumberDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/baloo_regular"
            android:id="@+id/tvCountryDeaths"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/greyCountryDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="@color/greyBar"
        android:layout_below="@+id/llData"
        android:layout_width="130dp"
        android:layout_height="0.5dp"/>

</RelativeLayout>